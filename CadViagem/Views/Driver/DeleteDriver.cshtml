@model DriverViewModel
@{
    ViewData["Title"] = "Apagar Motorista";
}

<div class="text-center">
    <h3>Realmente deseja apagar esse contato (@Model.FirstName @Model.LastName) ?</h3>
</div>

<a class="btn btn-danger btn-block" role="button" asp-controller="Driver" asp-action="Delete" asp-route-id="@Model.Id">Confirmar Exclusão</a>
<a class="btn btn-primary btn-block" role="button" asp-controller="Driver" asp-action="Index">Cancelar</a>